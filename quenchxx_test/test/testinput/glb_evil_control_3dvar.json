{
  "resolution": {
    "function space": "StructuredColumns",
    "grid": {
      "type": "regular_lonlat",
      "N": "10"
    },
    "groups": [
      {
        "variables": ["temperature"],
        "levels": "2"
      }
    ],
    "halo": "1"
  },
  "model": {},
  "cost_function": {
    "cost_type": "3D-Var",
    "window_begin": "2010-01-01T12:00:00Z",
    "window_length": "PT0H",
    "variables": ["temperature"],
    "Jb": {
      "Background": {
        "state": [
          {
            "date": "2010-01-01T12:00:00Z",
            "variables": ["temperature"],
            "filepath": "testdata/glb_bkg_12_000001"
          }
        ]
      },
      "Covariance": {
        "covariance": "SABER",
        "saber central block": {
          "saber block name": "BUMP_NICAS",
          "calibration": {
            "drivers": {
              "multivariate strategy": "univariate",
              "compute nicas": "true"
            },
            "nicas": {
              "resolution": "4.0",
              "explicit length-scales": "true",
              "horizontal length-scale": [
                {
                  "groups": ["temperature"],
                  "value": "4.0e6"
                }
              ],
              "vertical length-scale": [
                {
                "groups": ["temperature"],
                "value": "3.0"
                }
              ]
            }
          }
        },
        "saber outer blocks": [
          {
            "saber block name": "StdDev",
            "read": {
              "model file": {
                "filepath": "testdata/glb_stddev"
              }
            }
          }
        ]
      }
    },
    "Jo": {
      "ObsTypes": [
        {
          "ObsType": "default",
          "ObsData": {
            "ObsDataInScreened": {
              "filepath": "testdata/glb_obs_12"
            },
            "ObsDataOutScreened": {
              "filepath": "testdata/glb_obs_evil_control_3dvar"
            },
            "obsvalue": "ObsValue"
          },
          "Covariance": {
            "ObsErrorCovariance": {
              "covariance": "diagonal",
              "obserror": "ObsError"
            }
          },
          "variables": ["temperature"]
        }
      ]
    }
  },
  "minimizer": {
    "algorithm": "SQRTPLanczosEVIL",
    "classic_change_of_variables": "true",
    "ritz tolerance": "1.0e-2",
    "eigenvalues": "testdata/glb_evil_control_3dvar.eigenvalues.txt",
    "ritz vectors": {
      "ctlvec": [{
      "filepath": "testdata/glb_evil_control_3dvar.ritz.%iteration%"
      }]
    }
  },
  "output": {
    "filepath": "testdata/glb_evil_control_3dvar"
  },
  "variational": {
    "iteration": [
      {
        "resolution": {
          "function space": "StructuredColumns",
          "grid": {
            "type": "regular_lonlat",
            "N": "10"
          },
          "groups": [
            {
              "variables": ["temperature"],
              "levels": "2"
            }
          ],
          "halo": "1"
        },
        "timeslot": "PT0H",                
        "linearmodel": {
          "version": "default",
          "tstep": "PT0H",
          "trajectory": {
            "forcing": {
              "variables": ["temperature"]
            }
          }
        },
        "ninner": "10",
        "gradient_norm_reduction": "1e-10",
        "test": "on",
        "diagnostics": {
          "departures": {
            "obsvalue": "ombg"
          }
        }
      }
    ]
  },
  "final": {
    "diagnostics": {
      "departures": {
        "obsvalue": "oman"
      }
    }
  }
}
